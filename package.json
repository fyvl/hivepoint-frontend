{
    "name": "hivepoint-frontend",
    "private": true,
    "version": "0.1.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "lint": "eslint .",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "test": "vitest run",
        "api:generate": "openapi-typescript http://localhost:3000/openapi.json -o src/api/generated/schema.d.ts",
        "api:generate:check": "npm run api:generate && git diff --exit-code src/api/generated/schema.d.ts"
    },
    "dependencies": {
        "@radix-ui/react-dialog": "^1.1.4",
        "@radix-ui/react-dropdown-menu": "^2.1.4",
        "@radix-ui/react-label": "^2.1.1",
        "@radix-ui/react-progress": "^1.1.8",
        "@radix-ui/react-select": "^2.2.6",
        "@radix-ui/react-separator": "^1.1.8",
        "@radix-ui/react-slot": "^1.1.1",
        "@radix-ui/react-tabs": "^1.1.2",
        "@radix-ui/react-toast": "^1.2.15",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "lucide-react": "^0.511.0",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-router-dom": "^7.9.2",
        "tailwind-merge": "^2.6.0",
        "tailwindcss-animate": "^1.0.7"
    },
    "devDependencies": {
        "@types/node": "^22.10.2",
        "@types/react": "^19.0.8",
        "@types/react-dom": "^19.0.3",
        "@vitejs/plugin-react": "^5.0.0",
        "autoprefixer": "^10.4.20",
        "eslint": "^9.39.2",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "openapi-typescript": "^7.10.1",
        "postcss": "^8.4.47",
        "prettier": "^3.8.1",
        "tailwindcss": "^3.4.17",
        "typescript": "~5.9.3",
        "vite": "^7.2.4",
        "typescript-eslint": "^8.54.0",
        "vitest": "^3.0.5"
    }
}
